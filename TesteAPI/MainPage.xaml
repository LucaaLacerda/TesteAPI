<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TesteAPI.MainPage"
             Title="Clientes">

    <StackLayout Padding="20">
        <Label Text="Lista de Clientes" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="Codigo"> </Entry>
        <Button Clicked="Button_Clicked" Text="Buscar"/>

        <CollectionView x:Name="ClientesListView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Name}" FontAttributes="Bold" />
                        <Label Text="{Binding Email}" FontSize="12" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
